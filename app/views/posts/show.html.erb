<h3>スケジュール詳細</h3>

  <table>
    <tr>
      <th>タイトル</th>
      <td><%= @post.title %></td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= @post.start_date.to_s(:extra_short) %></td>
    </tr>
    <tr>
      <th>終了日</th>
      <td><%= @post.end_date.to_s(:extra_short) %></td>
    </tr>
    <tr>
      <th>終日</th>
      <td><% if @post.is_all_day == true %>
        ○
      <% else @post.is_all_day == false %>

      <% end %>
      </td>
    </tr>
    <tr>
      <th>スケジュールメモ</th>
      <td><%= @post.memo %></td>
    </tr>
  </table>

  <div class = "links">
    <ul>
      <li><%= link_to "予定一覧に戻る", :posts, class: "links" %></li>
      <li><%= link_to "編集", [:edit, @post], class: "links" %></li>
      <li><%= button_to "削除", @post, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "links" %></li>
    </ul>

  </div>