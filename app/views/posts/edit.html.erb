<h3>予定を編集してください</h3>

<%= form_with model: @post, url: post_path(@post), method: :patch, local: true do |f| %>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title, class: "forms" %></td>
    </tr>

    <tr>
      <th><%= f.label :start_date ,"開始日" %></th>
      <td><%= f.date_field :start_date, class: "forms" %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date ,"終了日" %></th>
      <td><%= f.date_field :end_date, class: "forms" %></td>
    </tr>

    <tr>
      <th><%= f.label :is_all_day ,"終日" %></th>
      <td class ><%= f.check_box :is_all_day, {}, checked_value='true', unchecked_value='false' %>
      <br>終日の場合はチェックを入れる
      </td>
    </tr>

    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo, class: "memo-cotent" %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する", class: "submit-button" %></li>
      <li><%= link_to "予定一覧に戻る", :posts %></li>
    </ul>
  </div>
    
<% end %>