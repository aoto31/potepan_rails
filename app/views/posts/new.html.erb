<h3>スケジュール新規作成</h3>

<%= render "shared/error", obj:@post %>
  <%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th>
      <div class="required">
      <%= f.label :title ,"タイトル" %>
      </div>
      </th>
      <td><%= f.text_field :title, class: "forms" %></td>
    </tr>

    <tr>
      <th>
      <div class="required">
      <%= f.label :start_date ,"開始日" %>
      </div>
      </th>
      <td><%= f.date_field :start_date, class: "forms" %></td>
    </div>
    </tr>

    <tr>
      <th>
      <div class="required">
      <%= f.label :end_date ,"終了日" %>
      </div>
      </th>
      <td><%= f.date_field :end_date, class: "forms" %></td>
    </div>
    </tr>

    <tr>
      <th><%= f.label :is_all_day ,"終日" %></th>
      <td><%= f.check_box :is_all_day, {}, checked_value='true', unchecked_value='false' %>
      <br>終日の場合はチェックを入れる
      </td>
    </tr>

    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo, class: "memo-cotent" %></td>
    </tr>
  </table>


     <div class="list">
       <ul>
         <li><%= f.submit "登録完了する", class: "submit-button" %></li>
         <li><%= link_to "予定一覧に戻る", :posts %></li>
       </ul>
     </div>
   <% end %>